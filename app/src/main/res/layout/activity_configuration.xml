<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_back"
    tools:context=".ConfigurationActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lb_pHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/bebas_neue"
                android:text="@string/p_home"
                android:textSize="24sp"
                tools:text="@string/p_home" />

            <EditText
                android:id="@+id/et_pHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/p_hint"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/lb_pAway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebas_neue"
                android:text="@string/p_away"
                android:textSize="24sp"
                tools:text="@string/p_away" />

            <EditText
                android:id="@+id/et_pAway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/p_hint"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/lb_previewTempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/bebas_neue"
                android:text="@string/time"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/bebas_neue"
                android:text="@string/config_time"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:rippleColor="@color/teal_200" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_create"
                    android:layout_width="0dp"
                    android:layout_height="97dp"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginVertical="50dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/bebas_neue"
                    android:text="@string/create"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:rippleColor="@color/teal_200" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_back_menu"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:layout_marginVertical="50dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/bebas_neue"
                android:text="@string/back"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:rippleColor="@color/teal_200" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>